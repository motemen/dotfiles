[color]
    diff = auto
    status = auto
    branch = auto
    grep = auto
[color "diff"]
#	whitespace = normal
[color "grep"]
    function = blue
#	match = reverse yellow
    filename = cyan
    linenumber = yellow
    separator = white
[user]
    email = motemen@gmail.com
    name = motemen
[alias]
    st = status --short --branch --ignore-submodules=dirty .
    co = checkout
    com = checkout master
    ci = commit -v
    di = diff
    dc = diff --cached
    br = branch
    lg = log --decorate --graph --abbrev-commit --pretty=oneline
    # r = recent-branches --no-merged
    r = !git reflog | perl -anal -e '$seen{$1}++ or print $1 if /checkout:.*to (.+)/' | head
    psuh = push
    o = browse-remote
    ls-others = ls-files --others --exclude-standard
    pr-branch = "!f() { git rev-parse --abbrev-ref $(git name-rev --name-only $(git ls-remote origin refs/pull/$1/head | cut -f1)) | sed s/^origin\\\\///; }; f"
    co-pr = "!f() { git checkout $(git pr-branch $1); }; f"
[core]
    excludesfile = ~/.gitignore
#	whitespace = nowarn
#	pager = less --quit-if-one-screen --RAW-CONTROL-CHARS --no-init
    pager = less -+$LESS -FRX
[pager]
# contrib/diff-highlight/diff-highlight
    log  = diff-highlight | less -+$LESS -FRX
    show = diff-highlight | less -+$LESS -FRX
    diff = diff-highlight | less -+$LESS -FRX
[push]
    default = current
[apply]
#	whitespace = nowarn
[help]
#	autocorrect = 4
[diff]
#   ignoreSubmodules = dirty
    submodule = log
    algorithm = patience
    wordRegex = [[:alnum:]]+|[^[:space:]]
    renames = copies
[branch]
    autosetuprebase = always
[diff "gzip"]
    textconv = gzcat
[web]
    browser = open
[merge]
    ff = false
[gc]
    auto = 0
[diff "cartonlock"]
    textconv = "perl -MJSON -0e \"\\$m = eval { decode_json(<>)->{modules} }; print qq(\\$_~\\$m->{\\$_}->{version}\\n) for sort keys %\\$m\""
[filetype "compressed"]
    binary = true
[pull]
    rebase = true
[include]
    path = ~/.gitconfig.local
[interactive]
    singlekey = true
